<h1>Nearby Stores</h1>

<p class="results-count"><%= @search_results.total %> Total Stores</p>

<div class='stores'>
  <% @search_results.stores.each do |store| %>
  <ul class='store'>
    <li class='long-name'><%= store.long_name %></li>
    <li class='city'>City: <%= store.city %></li>
    <li class='distance'>Distance: <%= store.distance %> Miles</li>
    <li class='phone'>Phone Number: <%= store.phone %></li>
    <li class='store-type'>Type: <%= store.type %></li>
  </ul>
  <% end %>
</div>